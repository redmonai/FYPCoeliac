<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ailbh.fypcoeliac">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_title"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/CoeliacAppTheme">
        <activity android:name=".InformationScreen" />
        <activity android:name=".ProductPage" />
        <activity android:name=".CategoryActivity" />
        <activity android:name=".scanIngredient" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity android:name=".UserProfile" />
        <activity android:name=".ViewCategoriesActivity" />
        <activity android:name=".IngredientInterpreter"></activity>
    </application>

</manifest>